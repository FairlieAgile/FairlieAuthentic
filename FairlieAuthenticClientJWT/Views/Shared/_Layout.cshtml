<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>FairlieAuthentic - @ViewBag.Title</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">
        
        @Styles.Render("~/Content/css")
    </head>
    <body>
